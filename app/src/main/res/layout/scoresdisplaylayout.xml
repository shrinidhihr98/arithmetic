<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--suppress CheckTagEmptyBody -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/scores_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TableLayout
            android:id="@+id/scoresTableLayout"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:textColor="#1d1a05"
            app:layout_constraintBottom_toTopOf="@+id/play_again"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <Button
            android:id="@+id/play_again"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_marginTop="21dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:text="@string/play_again_button_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoresTableLayout" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>